{
    "manifest_version": 3,
    "name": "meow Extension",
    "version": "1.0.1",
  

    "action": {"default_popup":"popup.html"},
    "default_locale": "en",
    "description": "lets you know when a website is using your device's microphone or camera.",
    "icons": {
        "48": "privacy-policy.png"
    },
 
    "author": "vibhutiprajapati784@gmail.com",
    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {"service_worker": "back.js"},
    "content_scripts": [{ 
        "matches": ["<all_urls>"],
        "js": ["content.js"]}],
    "web_accessible_resources": [
        {
        "resources": ["index.css"],
        "matches": ["<all_urls>"]
        }
    ]
  }